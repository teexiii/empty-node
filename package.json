{
    "name": "new-page-nextjs",
    "version": "0.0.1",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "build": "npm run clean && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "dev": "npm run clean && npm run set-permission && nodemon",
        "start": "node -r tsconfig-paths/register dist/index.js",
        "check-secret": "node .husky/check-secret.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "check-types": "tsc --noEmit --pretty",
        "prepare": "husky install",
        "format": "npm run lint --fix . && prettier . --write",
        "commit": "git add . && cz && git push origin -u",
        "pkg-version": "npm pkg set version=$(echo $(git describe --tags $(git rev-list --tags --max-count=1)) | cut -c2-)",
        "clean": "rimraf dist esm",
        "set-permission": "run-script-os",
        "set-permission:win32": "",
        "set-permission:darwin:linux": "chmod -R +x ./.husky",
        "set-permission:default": "chmod -R +x ./.husky",
        "semantic-release": "semantic-release"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "release": {
        "branches": [
            "main",
            {
                "name": "beta",
                "prerelease": true
            }
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/git"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cz-commitlint": "^17.8.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^11.0.0",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/release-notes-generator": "^12.0.0",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.19",
        "@types/node": "^20.8.6",
        "@typescript-eslint/eslint-plugin": "^6.8.0",
        "@typescript-eslint/parser": "^6.8.0",
        "eslint": "^8.44.0",
        "esm": "^3.2.25",
        "husky": "^8.0.3",
        "lint-staged": "^15.0.1",
        "nodemon": "^3.0.1",
        "run-script-os": "^1.1.6",
        "semantic-release": "^22.0.5",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tsc-alias": "^1.8.8",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@commitlint/cli": "^17.8.0",
        "@commitlint/config-conventional": "^17.8.0",
        "body-parser": "^1.20.2",
        "commander": "^11.1.0",
        "commitizen": "^4.3.0",
        "cors": "^2.8.5",
        "dayjs": "^1.11.10",
        "diginext-utils": "^3.1.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "moment": "^2.29.4",
        "rimraf": "^5.0.5",
        "sharp": "^0.32.6"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "exec": "ts-node -r tsconfig-paths/register src/index.ts",
        "ext": "js,json,ts,tsx",
        "ignore": [
            "node_modules",
            "dist",
            "build",
            "esm",
            "*.log"
        ],
        "env": {
            "NODE_ENV": "local"
        }
    }
}
